{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2015",
    "typeRoots": [
      "./src/types/",
      "./node_modules/@types/",
      "./**/node_modules/@types/"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "jsx": "react",
    "allowJs": true,
    "checkJs": false,
    "maxNodeModuleJsDepth": 0,
    "strict": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "build",
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.tsx"
  ],
  "extends": "./tsconfig.paths.json"
}
