{
  "name": "react-with-graphql",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-app-rewired start & json-graphql-server ./src/db.js --p 3001",
    "build": "react-app-rewired build && react-snapshot",
    "lint": "prettier --config .prettierrc.js --write src/**/*.{js,jsx,ts,tsx,json,css,scss,md}",
    "eject": "react-scripts eject",
    "generate": "graphql-codegen --config codegen.yml"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "antd": "3.26.2",
    "antd-dayjs-webpack-plugin": "1.0.0",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-client": "^2.6.8",
    "apollo-link": "^1.2.13",
    "apollo-link-context": "^1.0.20",
    "apollo-link-error": "^1.1.12",
    "apollo-link-http": "^1.5.16",
    "apollo-link-retry": "^2.2.15",
    "babel-plugin-import": "^1.13.0",
    "customize-cra": "^0.9.1",
    "graphql": "^14.5.8",
    "graphql-tag": "^2.10.1",
    "moment": "^2.24.0",
    "prop-types": "^15.7.2",
    "react": "16.13.1",
    "react-app-rewired": "^2.1.5",
    "react-dom": "16.13.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "sass-vars-to-js": "^0.8.7",
    "styled-components": "^5.1.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.9.1",
    "@graphql-codegen/fragment-matcher": "^1.9.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "json-graphql-server": "^2.1.3",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "lint-staged": "^9.5.0",
    "node-sass": "^4.13.0",
    "prettier": "^1.19.1",
    "sass": "^1.23.7",
    "sass-extract": "^2.1.0",
    "sass-extract-js": "^0.4.0",
    "sass-extract-loader": "^1.1.0",
    "sass-loader": "^8.0.0",
    "yorkie": "^2.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "graphqlConfig": {
    "production": {
      "endPoint": ""
    },
    "development": {
      "endPoint": "http://localhost:3001"
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write src/**/*.{js,jsx,ts,tsx,json,css,scss,md}",
      "git add"
    ]
  }
}
