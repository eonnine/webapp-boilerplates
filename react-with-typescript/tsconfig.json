{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2015",
    "typeRoots": [
      "src/types/",
      "node_modules/@types/",
      "**/node_modules/@types/"
    ],
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noImplicitAny": false,
    "jsx": "react",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "build",
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "src/setupTests.ts",
    "src/assets/*.*"
  ],
  "extends": "./tsconfig.paths.json",
  "include": [
    "src/**/*"
  ]
}
